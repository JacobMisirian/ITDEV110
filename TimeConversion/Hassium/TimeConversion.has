use "Info.has";

func main () {
	new Info("TimeConversion").displayInfo();

	print("\n\nEnter a time in seconds: ");

	seconds = Convert.toInt(input());
	hours = seconds / 3600;
	seconds = seconds - hours * 3600;
	minutes = seconds / 60;
	seconds = seconds - minutes * 60;

	println("Totals:\nSeconds: " + seconds + "\tMinutes: " + minutes + "\tHours: " + hours);
}
